
<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-header">
                Registra una cuenta
            </div>
            <div class="card-body">
                <form action="/users/signup" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="name" placeholder="Ingrese su nombre" value="{{name}}">
                </div>
                 <div class="form-group">
                    <input type="email" class="form-control" name="email" placeholder="Ingrese su email" value="{{email}}">
                </div>
                   <div class="form-group">
                    <input type="password" class="form-control" name="password" placeholder="Ingrese su contraseña" value="{{password}}">
                </div>
                 <div class="form-group">
                    <input type="password" class="form-control" name="confirmPassword" placeholder="Confirme su contraseña" value="{{confirmPassword}}">
                </div>
                <button class="btn btn-primary btn-block">
                    Sing Up
                </button>
                </form>
            </div>
        </div>
    </div>
</div>